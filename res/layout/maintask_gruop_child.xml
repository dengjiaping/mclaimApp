<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/maintask_group_child_tv_claimNo"
                style="@style/common_textview_style"
                android:layout_margin="4dp"
                android:text="京GQB876"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/maintask_group_child_tv_time"
                style="@style/common_textview_style"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:text="2012-11-20 12:20:39"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/maintask_group_child_tv_address"
                style="@style/common_textview_style"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:text="四通桥东"
                android:textColor="#88000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/maintask_group_child_tv_baoanren"
                style="@style/common_textview_style"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="4dp"
                android:text="李四"
                android:textColor="#88000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/maintask_group_child_tv_phone"
                style="@style/common_textview_style"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:text="18281915836"
                android:textColor="#88000000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/maintask_group_child_btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/maintask_map" />

</LinearLayout>