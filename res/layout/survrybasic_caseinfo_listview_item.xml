<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tasks_openbg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tv"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="报案号" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_baoan_no"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tv"
                />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tv_assured"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="被保险人" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_assured"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tv_assured"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tvcarno"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="号牌号码" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_carno"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tvcarno"
                   />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tvfactory"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="厂牌型号" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_factory"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tvfactory"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tv_reasontime"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="出险时间" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_reason"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tv_reasontime"
                     />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tv_time"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="报案时间" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_time"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tv_time"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tv_address"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="出险地点" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_address"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tv_address"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tv_driver"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="驾驶员" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_driver"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tv_driver"
                     />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tv_claimnumber"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="出险提示" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_claimnumber"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tv_claimnumber"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/survrybasic_caseinfo_listview_item_tv_starttime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_tv_starttime"
                    style="@style/word_list_item_textview_title_style"
                    android:layout_marginTop="25dp"
                    android:text="距保险起期" />

                <TextView
                    android:id="@+id/survrybasic_caseinfo_listview_item_starttime"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/survrybasic_caseinfo_listview_item_tv_starttime"
                   />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>