<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbgcolor"
    android:orientation="vertical" >

    
    <LinearLayout
        android:id="@+id/bt_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/third_boxbgtop"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/title_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="状态信息" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_linearlayout"
        android:background="@drawable/third_boxbgbottom"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/refreshServerTime_name"
                style="@style/word_list_item_textview_title_style"
                android:layout_marginTop="20dp"
                android:text="时间:" />

            <TextView
                android:id="@+id/refreshServerTime_HHmmss_tv"
                style="@style/word_list_item_textview_value_style"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/refreshServerTime_name"
                android:text="00:00:00" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/refreshServerDate_name"
                style="@style/word_list_item_textview_title_style"
                android:layout_marginTop="20dp"
                android:text="日期:" />

            <TextView
                android:id="@+id/refreshServerTime_yyyyMMdd_tv"
                style="@style/word_list_item_textview_value_style"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/refreshServerDate_name"
                android:text="年 月 日" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/refreshUserLocation_name"
                style="@style/word_list_item_textview_title_style"
                android:layout_marginTop="20dp"
                android:text="地址信息:" />

            <TextView
                android:id="@+id/refreshUserLocation_tv"
                style="@style/word_list_item_textview_value_style"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/refreshUserLocation_name"
                android:text="0" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/refreshNewRegist_name"
                style="@style/word_list_item_textview_title_style"
                android:layout_marginTop="20dp"
                android:text="刷新案件:" />

            <Button
                android:id="@+id/refreshNewRegist_bt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/refreshNewRegist_name"
                android:background="@drawable/btn_blue_click"
                android:text="刷新案件" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>