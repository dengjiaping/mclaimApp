                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

                <TextView
                    android:id="@+id/deflossbasic_caseinfo_listview_item_tvfactory"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="厂牌型号"
                    android:textColor="#066C78"
                    android:textSize="@dimen/text_size_little" />

                <TextView
                    android:id="@+id/deflossbasic_caseinfo_listview_item_factory"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/deflossbasic_caseinfo_listview_item_tvfactory" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor" >

