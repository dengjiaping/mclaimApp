                <TextView
                    android:id="@+id/deflossbasic_caseinfo_listview_item_starttime"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/deflossbasic_caseinfo_listview_item_tv_starttime" />
