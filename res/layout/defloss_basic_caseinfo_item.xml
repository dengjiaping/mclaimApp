                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="号牌号码"
                    android:textColor="#066C78"
                    android:textSize="@dimen/text_size_little" />

                <TextView
                    android:id="@+id/deflossbasic_caseinfo_listview_item_carno"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/deflossbasic_caseinfo_listview_item_tvcarno" />
