<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tasks_openbg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/history_tiltelist_bg"
                    android:gravity="center" >

                    <TextView
                        style="@style/common_child_textview_style"
                        android:text="标的车车牌 " />
                </LinearLayout>

                <TextView
                    android:id="@+id/defloss_basic_loss_report_no"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#66000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:gravity="left" >

                    <TextView
                        style="@style/common_child_textview_style"
                        android:text="定损员" />
                </LinearLayout>

                <TextView
                    android:id="@+id/defloss_basic_loss_deflossname"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#66000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:gravity="left" >

                    <TextView
                        style="@style/common_child_textview_style"
                        android:text="定损金额" />
                </LinearLayout>

                <TextView
                    android:id="@+id/defloss_basic_loss_deflossprice"
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#66000000" />

            <ListView
                android:id="@+id/defloss_basic_loss_lv_threecar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#66000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/history_tiltelist_bg"
                    android:gravity="center" >

                    <TextView
                        style="@style/common_child_textview_style"
                        android:text="物损" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#66000000" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbgcolor"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/history_tiltelist_bg"
                    android:gravity="center" >

                    <TextView
                        style="@style/common_child_textview_style"
                        android:text="人伤" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#66000000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>