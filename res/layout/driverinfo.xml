<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tasks_openbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/driverinfo_tv_identitycard_name"
            style="@style/word_list_item_textview_title_style"
            android:layout_marginTop="25dp"
            android:text="驾驶员姓名" />

        <EditText
            android:id="@+id/driverinfo_et_identity_name"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/driverinfo_tv_identitycard_name"
            android:background="@drawable/input_bg"
            android:maxLength="18"
            android:singleLine="true"
            android:textSize="@dimen/text_size_middle" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/driverinfo_tv_identitycard_title"
            style="@style/word_list_item_textview_title_style"
            android:layout_marginTop="25dp"
            android:text="驾驶员身份证号码" />

        <EditText
            android:id="@+id/driverinfo_et_identitycard"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/driverinfo_tv_identitycard_title"
            android:background="@drawable/input_bg"
            android:maxLength="18"
            android:singleLine="true"
            android:textSize="@dimen/text_size_middle" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/driverinfo_tv_titme_title"
            style="@style/word_list_item_textview_title_style"
            android:layout_marginTop="25dp"
            android:text="驾驶员领证时间" />

        <EditText
            android:id="@+id/driverinfo_et_time"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/driverinfo_tv_titme_title"
            android:background="@drawable/input_bg"
            android:singleLine="true"
            android:textSize="@dimen/text_size_middle" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/driverinfo_tv_drivinglicence_title"
            style="@style/word_list_item_textview_title_style"
            android:layout_marginTop="25dp"
            android:text="驾驶员驾驶证号码" />

        <EditText
            android:id="@+id/driverinfo_et_drivinglicence"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/driverinfo_tv_drivinglicence_title"
            android:background="@drawable/input_bg"
            android:maxLength="18"
            android:singleLine="true"
            android:textSize="@dimen/text_size_middle" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />
<LinearLayout
    android:id="@+id/beijing_driverinfo"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        style="@style/word_list_item_textview_title_style"
        android:layout_marginRight="20dp"
        android:text="证件类型" />

    <include
        android:id="@+id/smp_i_driverinfo_certitype"
        layout="@layout/common_spinner" />
</LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />
</LinearLayout>