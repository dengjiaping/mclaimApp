<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbgcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/history_searchbg" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white" >

            <EditText
                android:id="@+id/queryhistory_et"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="输入报案号、被保险人、车牌号"
                android:paddingLeft="45dp"
                android:paddingRight="60dp"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/queryhistory_et"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_search" />

            <ImageView
                android:id="@+id/queryhistory_btn_search"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_serach_bg" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/history_listshadow"
        android:gravity="center|left" >

        <TextView
            android:id="@+id/queryhistory_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#88000000"
            android:textSize="@dimen/text_size_little" />
    </LinearLayout>

    <ListView
        android:id="@+id/queryhistory_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>