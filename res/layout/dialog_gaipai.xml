<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_gaipai_item_tv1"
                style="@style/word_list_item_textview_value_style"
                android:layout_marginTop="12dp"
                android:text="道路拥堵,无法到达现场。" />

            <TextView
                android:id="@+id/dialog_gaipai_item_tv2"
                style="@style/word_list_item_textview_value_style"
                android:layout_marginTop="25dp"
                android:text="车辆损坏,无法到达现场。" />

            <TextView
                android:id="@+id/dialog_gaipai_item_tv3"
                style="@style/word_list_item_textview_value_style"
                android:layout_marginTop="26dp"
                android:text="车辆维修中,无法到达现场。" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/dialog_gaipai_item_rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" >

            <RadioButton
                android:id="@+id/dialog_gaipai_item_rd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/dialog_gaipai_item_rd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/dialog_gaipai_item_rd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appbgcolor" >

        <EditText
            android:id="@+id/gaipai_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/input_bg"
            android:hint="其它原因" 
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLength="100"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />

</LinearLayout>