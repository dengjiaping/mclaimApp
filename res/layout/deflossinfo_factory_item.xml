<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tasks_openbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/appbgcolor"
        android:gravity="center_vertical" >

        <TextView
            style="@style/word_list_item_textview_title_style"
            android:layout_width="120dp"
            android:text="修理厂名称" />

        <TextView
            android:id="@+id/deflossinfo_factory_item_tv_facname"
            style="@style/word_list_item_textview_value_style"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/appbgcolor"
        android:gravity="center_vertical" >

        <TextView
            style="@style/word_list_item_textview_title_style"
            android:layout_width="120dp"
            android:text="修理厂资质" />

        <TextView
            android:id="@+id/deflossinfo_factory_item_tv_aptitude"
            style="@style/word_list_item_textview_value_style"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/appbgcolor"
        android:gravity="center_vertical" >

        <TextView
            style="@style/word_list_item_textview_title_style"
            android:layout_width="120dp"
            android:text="修理厂合作性质" />

        <TextView
            android:id="@+id/deflossinfo_factory_item_tv_cooperation"
            style="@style/word_list_item_textview_value_style"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/appbgcolor"
        android:gravity="center_vertical" >

        <TextView
            style="@style/word_list_item_textview_title_style"
            android:layout_width="120dp"
            android:text="维修方式" />
        
        <include
            android:id="@+id/deflossinfo_factory_item_spinner_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/common_spinner" />
        <!-- 
        <TextView
            android:id="@+id/deflossinfo_factory_item_tv_weixiu"
            style="@style/word_list_item_textview_value_style"
            android:text="送修" />
       	 -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/appbgcolor"
        android:gravity="center_vertical" >

        <TextView
            style="@style/word_list_item_textview_title_style"
            android:layout_width="120dp"
            android:text="外修原因" />

        <EditText
            android:id="@+id/deflossinfo_factory_item_et_reason"
            style="@style/word_list_item_textview_value_style"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:text=""
        	android:layout_gravity="center_vertical"  />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#66000000" />

</LinearLayout>