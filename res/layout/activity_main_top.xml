<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/appbgcolor" >

    <!-- 公共的 -->

    <RelativeLayout
        android:id="@+id/activity_main_top_r1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg" >

        <TextView
            android:id="@+id/activity_main_top_r1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Title"
            android:textColor="@color/black"/>

        <FrameLayout
            android:id="@+id/activity_main_top_fl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" >

            <ImageButton
                android:id="@+id/activity_main_top_r1_imb_back"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/head_back_bg" />

            <ImageButton
                android:id="@+id/activity_main_top_r1_imb_home"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/head_home_bg" />

            <ImageButton
                android:visibility="gone"
                android:id="@+id/activity_main_top_r1_imb_exit"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/head_exit_bg" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/activity_main_top_fl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" >

            <ImageButton
                android:id="@+id/activity_main_top_r1_imb_tongbu"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_top_bg" />
        </FrameLayout>
    </RelativeLayout>

    <!-- 查勘 -->

    <LinearLayout
        android:id="@+id/activity_main_top_survey"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_main_top_r1"
        android:layout_marginTop="4dp"
        android:background="@drawable/tasks_infor"
        android:gravity="center"
        android:visibility="gone" >

        <Button
            android:id="@+id/activity_main_top_survey_basic_msg"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/taskwork_info_bg" />

        <Button
            android:id="@+id/activity_main_top_survey_survey_msg"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/taskwork_survey_bg" />

        <Button
            android:id="@+id/activity_main_top_survey_photograph_msg"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/taskwork_photo_bg" />

        <Button
            android:id="@+id/activity_main_top_survey_process_query"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/taskwork_processse_bg" />
    </LinearLayout>

    <!-- 定损 -->

    <LinearLayout
        android:id="@+id/activity_main_top_defloss"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_main_top_r1"
        android:layout_marginTop="4dp"
        android:background="@drawable/tasks_infor"
        android:gravity="center" >

        <Button
            android:id="@+id/activity_main_top_defloss1_basic_msg"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/taskwork_info_bg" />

        <Button
            android:id="@+id/activity_main_top_defloss1_claim_msg"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/taskwork_deloss_bg" />

        <Button
            android:id="@+id/activity_main_top_defloss1_photograph_msg"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/taskwork_photo_bg" />

        <Button
            android:id="@+id/activity_main_top_defloss1_process_query"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/taskwork_processse_bg" />
    </LinearLayout>

    <!-- 协赔员菜单 -->

    <LinearLayout
        android:id="@+id/activity_main_top_r3"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/activity_main_top_defloss"
        android:layout_marginTop="2dp"
        android:background="@drawable/assist_video"
        android:gravity="center"
        android:visibility="gone" >

        <Button
            android:id="@+id/activity_main_top_r3_video"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/assist_videobtn" />
    </LinearLayout>

</RelativeLayout>