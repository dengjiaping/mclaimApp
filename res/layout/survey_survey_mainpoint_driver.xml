<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appbgcolor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/appbgcolor"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/driver_tv_rl_baoandriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    style="@style/word_list_item_textview_value_style"
                    android:layout_marginLeft="15dp"
                    android:text="是否为报案驾驶员" />

                <com.sinosoftyingda.fastclaim.common.ui.utils.MySlipSwitch
                    android:id="@+id/driver_tv_baoandriver_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/driver_ed_baoandriver"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/driver_tv_rl_baoandriver"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_bg"
                android:gravity="top"
                android:inputType="textMultiLine"
                   android:maxLength="150"
                android:scrollHorizontally="false"
                android:singleLine="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#66000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/appbgcolor" >

            <TextView
                style="@style/word_list_item_textview_value_style"
                android:layout_margin="15dp"
                android:text="是否为允许的驾驶员" />

            <com.sinosoftyingda.fastclaim.common.ui.utils.MySlipSwitch
                android:id="@+id/driver_tv_allowdriver_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#66000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/appbgcolor" >

            <TextView
                style="@style/word_list_item_textview_value_style"
                android:layout_margin="15dp"
                android:text="准驾车型是否相符" />

            <com.sinosoftyingda.fastclaim.common.ui.utils.MySlipSwitch
                android:id="@+id/driver_tv_modelstype_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#66000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/appbgcolor" >

            <TextView
                style="@style/word_list_item_textview_value_style"
                android:layout_margin="15dp"
                android:text="驾驶证是否有效" />

            <com.sinosoftyingda.fastclaim.common.ui.utils.MySlipSwitch
                android:id="@+id/driver_tv_validdriverlicense_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#66000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/appbgcolor" >

            <TextView
                style="@style/word_list_item_textview_value_style"
                android:layout_margin="15dp"
                android:text="是否酒后驾车" />

            <com.sinosoftyingda.fastclaim.common.ui.utils.MySlipSwitch
                android:id="@+id/driver_tv_drunkdriving_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>